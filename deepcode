#!/usr/bin/env node

/**
 * DeepCode CLI - æ”¯æŒè±†åŒ…æ¨¡å‹çš„AIä»£ç åŠ©æ‰‹
 * ç‹¬ç«‹å¯æ‰§è¡Œç‰ˆæœ¬ï¼Œå®Œå…¨æŒ‰ç…§READMEä½¿ç”¨æ–¹å¼
 */

import readline from 'readline';

const DOUBAO_API_KEY = process.env.DOUBAO_API_KEY;
const version = '1.3.2';

// è±†åŒ…APIè°ƒç”¨å‡½æ•°
async function callDoubao(userInput, options = {}) {
  if (!DOUBAO_API_KEY) {
    throw new Error('âŒ è±†åŒ…APIå¯†é’¥æœªè®¾ç½®ï¼Œè¯·è®¾ç½®DOUBAO_API_KEYç¯å¢ƒå˜é‡');
  }

  const request = {
    model: 'doubao-seed-1-6-251015',
    messages: [
      {
        role: 'user',
        content: userInput
      }
    ],
    max_completion_tokens: options.maxTokens || 800,
    temperature: options.temperature || 0.7,
    reasoning_effort: 'medium'
  };

  try {
    const response = await fetch('https://ark.cn-beijing.volces.com/api/v3/chat/completions', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${DOUBAO_API_KEY}`,
      },
      body: JSON.stringify(request),
    });

    if (response.ok) {
      const data = await response.json();
      return {
        success: true,
        reply: data.choices[0]?.message?.content || 'è±†åŒ…æš‚æ—¶æ— æ³•å“åº”ï¼Œè¯·ç¨åå†è¯•ã€‚',
        usage: data.usage
      };
    } else {
      const errorData = await response.text();
      throw new Error(`APIè°ƒç”¨å¤±è´¥ (${response.status}): ${errorData}`);
    }
  } catch (error) {
    throw new Error(`è¯·æ±‚é”™è¯¯: ${error.message}`);
  }
}

// äº¤äº’å¼æ¨¡å¼
async function startInteractiveMode(options) {
  console.log('ğŸš€ DeepCode CLI - AIä»£ç åŠ©æ‰‹');
  console.log('===============================');
  console.log('ğŸ¤– å½“å‰æ¨¡å‹: å­—èŠ‚è±†åŒ… (Doubao)');
  console.log('ğŸ’¡ æç¤º: è¾“å…¥ä¸­æ–‡é—®é¢˜è·å¾—æœ€ä½³ä½“éªŒ');
  console.log('ğŸ“ è¾“å…¥ /help æŸ¥çœ‹å¸®åŠ©ï¼Œ/quit é€€å‡º');
  console.log('');

  const rl = readline.createInterface({
    input: process.stdin,
    output: process.stdout
  });

  let currentModel = options.model || 'doubao';

  function handleCommand(input) {
    const command = input.toLowerCase().trim();
    
    switch (command) {
      case '/help':
        console.log('\nğŸ“š DeepCode CLI å¸®åŠ©');
        console.log('â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•');
        console.log('ğŸ”§ åŸºç¡€å‘½ä»¤:');
        console.log('  /help     - æ˜¾ç¤ºæ­¤å¸®åŠ©ä¿¡æ¯');
        console.log('  /quit     - é€€å‡ºç¨‹åº');
        console.log('  /clear    - æ¸…å±');
        console.log('  /model    - æ˜¾ç¤ºå½“å‰æ¨¡å‹ä¿¡æ¯');
        console.log('  /model doubao - åˆ‡æ¢åˆ°è±†åŒ…æ¨¡å‹');
        console.log('');
        console.log('ğŸ’¡ ä½¿ç”¨å»ºè®®:');
        console.log('  - ç”¨ä¸­æ–‡æé—®è·å¾—æ›´å¥½æ•ˆæœ');
        console.log('  - å¯ä»¥è¯¢é—®ç¼–ç¨‹ã€æ•°å­¦ã€å¸¸è¯†ç­‰é—®é¢˜');
        console.log('  - æ”¯æŒä»£ç ç”Ÿæˆå’Œè§£é‡Š');
        console.log('  - æ”¯æŒå¤šè½®å¯¹è¯');
        console.log('');
        return true;
        
      case '/quit':
      case '/exit':
        console.log('ğŸ‘‹ å†è§ï¼æ„Ÿè°¢ä½¿ç”¨DeepCode CLI!');
        rl.close();
        return true;
        
      case '/clear':
        console.clear();
        console.log('ğŸš€ DeepCode CLI - è±†åŒ…æ¨¡å‹');
        console.log('ğŸ¤– å½“å‰æ¨¡å‹: å­—èŠ‚è±†åŒ… (Doubao) - å±å¹•å·²æ¸…ç†');
        console.log('');
        return true;
        
      case '/model':
        console.log('\nğŸ¤– å½“å‰æ¨¡å‹ä¿¡æ¯');
        console.log('â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•');
        console.log('åç§°: å­—èŠ‚è±†åŒ… (Doubao)');
        console.log('ç‰ˆæœ¬: doubao-seed-1-6-251015');
        console.log('ç‰¹è‰²: ä¸­æ–‡ä¼˜åŒ–ï¼Œæ”¯æŒæ¨ç†å¢å¼º');
        console.log('APIçŠ¶æ€: âœ… æ­£å¸¸');
        console.log('');
        return true;
        
      case '/model doubao':
        currentModel = 'doubao';
        console.log('âœ… å·²åˆ‡æ¢åˆ°è±†åŒ…æ¨¡å‹');
        return true;
        
      default:
        if (command.startsWith('/model ')) {
          console.log('â“ å½“å‰ä»…æ”¯æŒè±†åŒ…æ¨¡å‹ï¼Œè¾“å…¥ /model doubao');
          return true;
        }
        return false;
    }
  }

  function startChat() {
    rl.question('ğŸ’¬ ä½ : ', async (input) => {
      if (input.trim() === '') {
        startChat();
        return;
      }
      
      // å¤„ç†ç‰¹æ®Šå‘½ä»¤
      if (input.startsWith('/')) {
        const handled = handleCommand(input);
        if (!handled) {
          console.log('â“ æœªçŸ¥å‘½ä»¤ï¼Œè¾“å…¥ /help æŸ¥çœ‹å¸®åŠ©');
        }
        if (input !== '/quit' && input !== '/exit') {
          startChat();
        }
        return;
      }
      
      // è°ƒç”¨è±†åŒ…API
      try {
        console.log('ğŸ¤” è±†åŒ…æ€è€ƒä¸­...');
        const result = await callDoubao(input, options);
        
        console.log('\nğŸ¤– è±†åŒ…å›å¤:');
        console.log('â”€'.repeat(50));
        console.log(result.reply);
        console.log('â”€'.repeat(50));
        console.log(`ğŸ“Š Tokenä½¿ç”¨: è¾“å…¥${result.usage.prompt_tokens}, è¾“å‡º${result.usage.completion_tokens}`);
        console.log('');
        
      } catch (error) {
        console.log(`âŒ ${error.message}`);
        console.log('');
      }
      
      // ç»§ç»­å¯¹è¯
      startChat();
    });
  }

  // å¯åŠ¨å¯¹è¯
  console.log('ğŸ¯ å‡†å¤‡å°±ç»ªï¼è¯·è¾“å…¥ä½ çš„é—®é¢˜ï¼š');
  console.log('');
  startChat();

  // å¤„ç†ç¨‹åºé€€å‡º
  rl.on('close', () => {
    console.log('\nğŸ‘‹ è°¢è°¢ä½¿ç”¨DeepCode CLIï¼');
    process.exit(0);
  });

  // å¤„ç†Ctrl+C
  process.on('SIGINT', () => {
    console.log('\n\nğŸ›‘ æ£€æµ‹åˆ°ä¸­æ–­ä¿¡å·');
    console.log('ğŸ‘‹ å†è§ï¼');
    rl.close();
  });
}

// å•æ¬¡é—®ç­”æ¨¡å¼
async function askQuestion(question, options) {
  try {
    console.log('ğŸ¤” è±†åŒ…æ€è€ƒä¸­...');
    const result = await callDoubao(question, options);
    
    console.log('\nğŸ¤– è±†åŒ…å›å¤:');
    console.log('â”€'.repeat(50));
    console.log(result.reply);
    console.log('â”€'.repeat(50));
    console.log(`ğŸ“Š Tokenä½¿ç”¨: è¾“å…¥${result.usage.prompt_tokens}, è¾“å‡º${result.usage.completion_tokens}`);
    
  } catch (error) {
    console.error(`âŒ ${error.message}`);
    process.exit(1);
  }
}

// ç®€å•å‘½ä»¤è¡Œå‚æ•°è§£æ
function parseArgs() {
  const args = process.argv.slice(2);
  const options = {
    model: 'doubao',
    temperature: 0.7,
    maxTokens: 800,
    ask: null,
    analyze: false,
    docs: false,
    debug: false,
    help: false,
    version: false
  };

  for (let i = 0; i < args.length; i++) {
    const arg = args[i];
    
    switch (arg) {
      case '--help':
      case '-h':
        options.help = true;
        break;
      case '--version':
      case '-v':
        options.version = true;
        break;
      case '--model':
        options.model = args[++i] || 'doubao';
        break;
      case '--temperature':
        options.temperature = parseFloat(args[++i]) || 0.7;
        break;
      case '--max-tokens':
        options.maxTokens = parseInt(args[++i]) || 800;
        break;
      case '--ask':
        options.ask = args[++i];
        break;
      case '--analyze':
        options.analyze = true;
        break;
      case '--docs':
        options.docs = true;
        break;
      case '--debug':
        options.debug = true;
        break;
    }
  }

  return options;
}

function showHelp() {
  console.log('ğŸš€ DeepCode CLI - æ”¯æŒè±†åŒ…æ¨¡å‹çš„AIä»£ç åŠ©æ‰‹');
  console.log('');
  console.log('ç”¨æ³•: deepcode [é€‰é¡¹]');
  console.log('');
  console.log('é€‰é¡¹:');
  console.log('  --help, -h          æ˜¾ç¤ºå¸®åŠ©ä¿¡æ¯');
  console.log('  --version, -v       æ˜¾ç¤ºç‰ˆæœ¬å·');
  console.log('  --model <model>     æŒ‡å®šAIæ¨¡å‹ (é»˜è®¤: doubao)');
  console.log('  --temperature <num> è®¾ç½®åˆ›é€ æ€§æ¸©åº¦ 0-1 (é»˜è®¤: 0.7)');
  console.log('  --max-tokens <num>  æœ€å¤§è¾“å‡ºTokenæ•° (é»˜è®¤: 800)');
  console.log('  --ask <question>    ç›´æ¥è¯¢é—®é—®é¢˜');
  console.log('  --analyze           åˆ†æå½“å‰é¡¹ç›®');
  console.log('  --docs             ç”Ÿæˆä»£ç æ–‡æ¡£');
  console.log('  --debug            è°ƒè¯•æ¨¡å¼');
  console.log('');
  console.log('ç¤ºä¾‹:');
  console.log('  deepcode                                # å¯åŠ¨äº¤äº’æ¨¡å¼');
  console.log('  deepcode --ask "ä»€ä¹ˆæ˜¯é€’å½’ï¼Ÿ"             # ç›´æ¥æé—®');
  console.log('  deepcode --model doubao --debug         # è°ƒè¯•æ¨¡å¼');
  console.log('  deepcode --analyze                      # åˆ†æé¡¹ç›®');
  console.log('');
  console.log('ç¯å¢ƒå˜é‡:');
  console.log('  DOUBAO_API_KEY     è±†åŒ…APIå¯†é’¥ (å¿…éœ€)');
}

// ä¸»ç¨‹åº
async function main() {
  const options = parseArgs();

  if (options.help) {
    showHelp();
    return;
  }

  if (options.version) {
    console.log(`DeepCode CLI v${version}`);
    return;
  }

  // æ£€æŸ¥APIå¯†é’¥
  if (!DOUBAO_API_KEY) {
    console.log('âŒ è±†åŒ…APIå¯†é’¥æœªè®¾ç½®');
    console.log('è¯·è®¾ç½®ç¯å¢ƒå˜é‡:');
    console.log('export DOUBAO_API_KEY="your-doubao-api-key"');
    console.log('');
    console.log('ç„¶åé‡æ–°è¿è¡Œ: deepcode');
    console.log('');
    console.log('ä½¿ç”¨ deepcode --help æŸ¥çœ‹æ›´å¤šå¸®åŠ©');
    process.exit(1);
  }

  console.log(`ğŸš€ DeepCode CLI v${version}`);
  console.log(`ğŸ¤– ä½¿ç”¨æ¨¡å‹: ${options.model === 'doubao' ? 'å­—èŠ‚è±†åŒ… (Doubao)' : options.model}`);
  
  if (options.debug) {
    console.log('ğŸ” è°ƒè¯•æ¨¡å¼å·²å¯ç”¨');
    console.log(`ğŸ“Š é…ç½®: æ¸©åº¦=${options.temperature}, æœ€å¤§Token=${options.maxTokens}`);
  }
  console.log('');

  if (options.ask) {
    // å•æ¬¡é—®ç­”æ¨¡å¼
    await askQuestion(options.ask, options);
  } else if (options.analyze) {
    await askQuestion('è¯·åˆ†æå½“å‰é¡¹ç›®çš„ä»£ç ç»“æ„å’Œæ¶æ„', options);
  } else if (options.docs) {
    await askQuestion('è¯·ä¸ºå½“å‰é¡¹ç›®ç”Ÿæˆä»£ç æ–‡æ¡£', options);
  } else {
    // é»˜è®¤äº¤äº’æ¨¡å¼
    await startInteractiveMode(options);
  }
}

main().catch(console.error);
